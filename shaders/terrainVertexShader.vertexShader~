#version 400

layout (location = 0) in vec3 positionModelSpace_in;
layout (location = 1) in vec3 localTexCoord_in;

uniform mat4 modelMatrix;
uniform vec3 cameraPosition;

out vec3 positionWorldSpace;
out vec2 globalTexCoord;


void main() {
	positionWorldSpace = (modelMatrix * vec4(positionModelSpace_in, 1)).xyz;
	gl_Position = modelMatrix * vec4(positionModelSpace_in,1);

	vec2 cameraTexCoords = vec2((cameraPosition.x + horizontalTerrainScale / 2) / horizontalTerrainScale,
				    -cameraPosition.z + horizontalTerrainScale / 2) / horizontalTerrainScale);
	globalTexCoord = vec2() localTexCoord_in.xy;

}

